<div class="banner">
  <%# <div class="bottom-left"><span data-controller="typed-js"></span></div> %>
  <div class="bottom-left">The world's simplest sneaker marketplace</div>
  <div class="top-left">Seek<span>A</span>Sneaker</div>
    <% if user_signed_in? %>
      <%= link_to "List sneakers", new_sneaker_path, class: "btn btn-danger", id: "banner-btn"%>
    <% end %>
</div>

<div class="d-flex justify-content-center">
  <div class="w-75 d-flex align-items-center flex-column mt-4">
    <% if @search && @search.length == 1%>
      <h3 class="my-4 fs-1 "><b><%= @sneakers.length %> SNEAKER FOUND</b></h3>
      <%= link_to "Refresh page", root_path, class: "mb-4" %>
    <% elsif @search && @search.length > 1 %>
      <h3 class="my-4 fs-1 "><b><%= @sneakers.length %> SNEAKERS FOUND</b></h3>
      <%= link_to "Refresh page", root_path, class: "mb-4" %>
    <% else %>
      <h3 class="my-4 fs-1"><b>LATEST SNEAKERS</b></h3>
    <% end %>
  </div>
</div>

<%# if/else for search results not working correctly %>
